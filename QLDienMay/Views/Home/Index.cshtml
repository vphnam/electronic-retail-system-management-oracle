@using QLDienMay.Models
@model List<SANPHAM>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/LayoutMain.cshtml";
}
<div id="page-content" class="home-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Carousel -->
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators hidden-xs">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Assets/images/main-banner4-1903x600.jpg" alt="First slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                        <div class="item">
                            <img src="~/Assets/images/main-banner5-1903x600.jpg" alt="Second slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                        <div class="item">
                            <img src="~/Asset/images/main-banner4-1903x600.jpg" alt="Third slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div><!-- /carousel -->
            </div>
        </div>
        <div class="row">
            <div class="banner">
                <div class="col-sm-4">
                    <img src="~/Assets/images/sub-banner6.jpg" />
                </div>
                <div class="col-sm-4">
                    <img src="~/Assets/images/sub-banner2.png" />
                </div>
                <div class="col-sm-4">
                    <img src="~/Assets/images/sub-banner3.png" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="heading"><h2>SẢN PHẨM BÁN CHẠY</h2></div>
                <div class="products">
                    @foreach (var item in Model)
                    {
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="product.html"><img src="@Url.Content(item.ANHMINHHOA)" /></a></div>
                            <div class="buttons">
                                <a class="btn cart" href="#"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                <a class="btn wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a>
                                <a class="btn compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a>
                            </div>
                            <div class="caption">
                                <div class="name"><h3><a href="product.html">@item.TENSANPHAM</a></h3></div>
                                @if (item.MAKHUYENMAI == null)
                                {
                                    <div class="price">
                                        @item.DONGIA Đ<span>0đ</span>
                                    </div>
                                }
                                @if (item.MAKHUYENMAI != null)
                                {
                                    <div class="price">
                                        @item.DONGIA Đ<span>0đ</span>
                                    </div>        
                                }

                                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                            </div>
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="banner">
                <div class="col-sm-6">
                    <img src="~/Assets/images/sub-banner4.jpg" />
                </div>
                <div class="col-sm-6">
                    <img src="~/Assets/images/sub_banner7.jpg" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="heading"><h2>SẢM PHẨM NỔI BẬT</h2></div>
                <div class="products">
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="product.html"><img src="~/Assets/images/tivi_sony.jpg" /></a></div>
                            <div class="buttons">
                                <a class="btn cart" href="#"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                <a class="btn wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a>
                                <a class="btn compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a>
                            </div>
                            <div class="caption">
                                <div class="name"><h3><a href="product.html">Smart Tivi Sony 4K 55 Inch KD-55X7500H VN3</a></h3></div>
                                <div class="price">
                                    16.150.000đ<span>19.500.000đ</span>
                                </div>
                                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="product.html"><img src="~/Assets/images/tulanh_toshiba.jpg" /></a></div>
                            <div class="buttons">
                                <a class="btn cart" href="#"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                <a class="btn wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a>
                                <a class="btn compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a>
                            </div>
                            <div class="caption">
                                <div class="name"><h3><a href="product.html">Tủ lạnh Toshiba Inverter 493 Lít GR-RS637WE-PMV(06)</a></h3></div>
                                <div class="price">24.990.000đ<span>28.990.000đ</span></div>
                                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="product.html"><img src="~/Assets/images/laptop_lenovo.jpg" /></a></div>
                            <div class="buttons">
                                <a class="btn cart" href="#"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                <a class="btn wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a>
                                <a class="btn compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a>
                            </div>
                            <div class="caption">
                                <div class="name"><h3><a href="product.html">Laptop Lenovo Yoga Slim 7 14ITL05 i7-1165G7 14 inch</a></h3></div>
                                <div class="price">25.390.000đ<span>25.990.000đ</span></div>
                                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                        <div class="product">
                            <div class="image"><a href="product.html"><img src="~/Assets/images/iphone12pro.jpg" /></a></div>
                            <div class="buttons">
                                <a class="btn cart" href="#"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                <a class="btn wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a>
                                <a class="btn compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a>
                            </div>
                            <div class="caption">
                                <div class="name"><h3><a href="product.html">Điện thoại iPhone 12 Pro 256GB Xám</a></h3></div>
                                <div class="price">28.990.000đ<span>34.990.000đ</span></div>
                                <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
