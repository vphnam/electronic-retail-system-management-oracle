@model PagedList.IPagedList<QLDienMay.Models.SANPHAM>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    DANH SÁCH SẢN PHẨM
}

@using (Html.BeginForm("Index", "SanPham"))
{
    <div class="form-horizontal">
        <div class="form-group" style="margin:15px;">
            <p class="small mb-1">Nhập mã sản phẩm cần tìm</p>
            <input type="search" name="id" style="width:400px; height:40px;" />
            <input type="submit" class="btn btn-primary" value="Tìm kiếm" style="width:100px;height:45px;" />
        </div>
    </div>
}


@Html.ActionLink("Thêm mới", "Create", "SanPham", new { @class = "btn btn-primary" })
<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1">Bảng danh sách sản phẩm</i>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th style="width:80px;">
                                    #
                                </th>
                                <th>
                                    Mã sản phẩm
                                </th>
                                <th>
                                    Tên sản phẩm
                                </th>
                                <th>
                                    Ảnh minh họa
                                <th style="width:100px;">
                                    Đơn giá
                                </th>
                                <th>
                                    Khuyến mãi
                                </th>
                                <th>
                                    Trạng thái
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr class="search">
                                    <td>
                                        @Html.ActionLink("Chỉnh sửa thông tin", "Edit", "SanPham", new { id = item.MASANPHAM }, null)
                                        <br />
                                        <br />
                                        @if (item.TRANGTHAI == "0")
                                        {
                                            @Html.ActionLink("Khóa sản phẩm", "KhoaSanPham", "SanPham", new { id = item.MASANPHAM, trangThai = "1" }, null)
                                        }
                                        else
                                        {
                                            @Html.ActionLink("Mở khóa sản phẩm", "KhoaSanPham", "SanPham", new { id = item.MASANPHAM, trangThai = "0" }, null)
                                        }
                                    </td>
                                    <td>@item.MASANPHAM</td>
                                    <td>@item.TENSANPHAM</td>
                                    <td><img src="@Url.Content(item.ANHMINHHOA)" width="180" style="text-align:center;height:180px" /> </td>
                                    <td>@Html.FormatValue(item.DONGIA, "{0:#,###}") VNĐ</td>
                                    <td>@item.MAKHUYENMAI</td>
                                    @if(item.TRANGTHAI == "0")
                                    {
                                        <td>Đang hoạt động</td>
                                    }
                                    else
                                    {
                                        <td>Không hoạt động</td>
                                    }
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Mã sản phẩm
                                </th>
                                <th>
                                    Tên sản phẩm
                                </th>
                                <th>
                                    Ảnh minh họa
                                <th>
                                    Đơn giá
                                </th>
                                <th>
                                    Khuyến mãi
                                </th>
                                <th>
                                    Trạng thái
                                </th>
                            </tr>
                        </tfoot>
                    </table>
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
                </div>
            </div>
        </div>
    </div>
</div>
<link href="~/Content/PagedList.css" rel="stylesheet" />


