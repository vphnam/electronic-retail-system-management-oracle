@using QLDienMay.Models
@model List<DisplaySP>
@{
    ViewBag.Title = "SortByLoai";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<div id="page-content" class="home-page">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <!-- Carousel -->
                <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators hidden-xs">
                        <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="1"></li>
                        <li data-target="#carousel-example-generic" data-slide-to="2"></li>
                    </ol>
                    <!-- Wrapper for slides -->
                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Assets/images/main-banner4-1903x600.jpg" alt="First slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                        <div class="item">
                            <img src="~/Assets/images/main-banner5-1903x600.jpg" alt="Second slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                        <div class="item">
                            <img src="~/Assets/images/main-banner4-1903x600.jpg" alt="Third slide">
                            <!-- Static Header -->
                            <div class="header-text hidden-xs">
                                <div class="col-md-12 text-center">
                                </div>
                            </div><!-- /header-text -->
                        </div>
                    </div>
                    <!-- Controls -->
                    <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                    </a>
                    <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                    </a>
                </div><!-- /carousel -->
            </div>
        </div>
        <div class="row">
            <div class="banner">
                <div class="col-sm-4">
                    <img src="~/Assets/images/sub-banner6.jpg" />
                </div>
                <div class="col-sm-4">
                    <img src="~/Assets/images/sub-banner2.png" />
                </div>
                <div class="col-sm-4">
                    <img src="~/Assets/images/sub-banner3.png" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="heading"><h2>Danh sách sản phẩm danh mục: @ViewBag.TenDM</h2></div>
                <div class="products">
                    @if (Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                                <div class="product">
                                    <div class="image"><a href="/Home/Detail/@item.maSanPham"><img src="@Url.Content(item.anhMinhHoa)" style="height:250px;width:300px;" /></a></div>
                                    <div class="buttons">
                                        <a class="btn cart" href="@Url.Action("ThemGioHang", "Giohang", new { @maSanPham = item.maSanPham, @soLuong = 1, @strURL = Request.Url.ToString() })"><span class="glyphicon glyphicon-shopping-cart"></span></a>
                                        <a class="btn wishlist" href="#"><span class="glyphicon glyphicon-heart"></span></a>
                                        <a class="btn compare" href="#"><span class="glyphicon glyphicon-transfer"></span></a>
                                    </div>
                                    <div class="caption">
                                        <div class="name" style="height:80px;"><h3><a href="/Home/Detail/@item.maSanPham">@item.tenSanPham</a></h3></div>
                                        @if (item.giaKhuyenMai != 0)
                                        {
                                            <div class="price">
                                                <span>@Html.FormatValue(item.donGia, "{0:#,###}") VNĐ</span>
                                                @Html.FormatValue(item.giaKhuyenMai, "{0:#,###}") VNĐ
                                            </div>
                                        }
                                        else
                                        {
                                            <br />
                                            <div class="price">@Html.FormatValue(item.donGia, "{0:#,###}") </div>
                                        }
                                        <div class="rating"><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star"></span><span class="glyphicon glyphicon-star-empty"></span><span class="glyphicon glyphicon-star-empty"></span></div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <br />
                        <br />
                        <h1>Sản phẩm hiện tại vẫn chưa có</h1>
                        <h2>Hãy xem các danh mục khác để tìm hiểu thêm cảc sản phẩm mới nhất của chúng tôi nhé</h2>
                        <br />
                        <br />
                    }


                </div>
            </div>
        </div>
        <div class="row">
            <div class="banner">
                <div class="col-sm-6">
                    <img src="~/Assets/images/sub-banner4.jpg" />
                </div>
                <div class="col-sm-6">
                    <img src="~/Assets/images/sub_banner7.jpg" />
                </div>
            </div>
        </div>
    </div>
</div>




